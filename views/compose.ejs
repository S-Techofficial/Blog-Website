<%- include("partials/header") -%>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label type="text">Title</label>
        <input class="form-control" type="text" name="postTitle" autocomplete="off">
        <label type="text">Post</label>
        <textarea class="form-control" type="text" name="postBody" rows="5" cols="30"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
    
</form>
<%- include("partials/footer") -%>